<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="MovieButton">

        <attr name="buttonText" format="string" />
        <attr name="buttonType" format="enum" >
            <enum name="FILLED" value="1" />
            <enum name="BORDER" value="2" />
        </attr>
        <attr name="buttonIcon" format="reference" />
        <attr name="buttonTextSize" format="reference" />
        <attr name="buttonIconWidth" format="reference" />
        <attr name="buttonIconHeight" format="reference" />
        <attr name="buttonIconGap" format="reference" />
        <attr name="buttonTextColor" format="color" />
        <attr name="enabled" format="boolean" />
        <attr name="android:fontFamily" />
        <attr name="buttonTextColorSelector" format="reference" />

    </declare-styleable>
    <declare-styleable name="MovieEditText">
        <attr name="editType" format="enum" >
            <enum name="Text" value="1" />
            <enum name="Search" value="2" />
            <enum name="Password" value="3" />
            <enum name="DecimalNumber" value="4" />
        </attr>
        <attr name="inputLimit" format="integer" />
        <attr name="title" format="string|reference" />
        <attr name="disableErrorMessage" format="boolean" />
        <attr name="hint" format="string" />


    </declare-styleable>

    <declare-styleable name="MovieToolBar">
        <attr name="header" format="string" />
        <attr name="leftIconVisibility" format="boolean" />


    </declare-styleable>


</resources>