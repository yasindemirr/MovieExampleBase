<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="MovieButton">

        <attr name="buttonText" format="string" />
        <attr name="buttonType" format="enum" >
            <enum name="FILLED" value="1" />
            <enum name="BORDER" value="2" />
        </attr>
        <attr name="buttonIcon" format="reference" />
        <attr name="buttonTextSize" format="reference" />
        <attr name="buttonIconWidth" format="reference" />
        <attr name="buttonIconHeight" format="reference" />
        <attr name="buttonIconGap" format="reference" />
        <attr name="buttonTextColor" format="color" />
        <attr name="enabled" format="boolean" />
        <attr name="android:fontFamily" />
        <attr name="buttonTextColorSelector" format="reference" />

    </declare-styleable>


</resources>